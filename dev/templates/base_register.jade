html(lang="ru", class="no-js", prefix="og:http://ogp.me/ns#")
	<!--<![endif]-->
	head
		+headerMeta({
			charset: "utf-8",
			keywords: info.keywords,
			description: info.description, 
			title: info.title,
			robots: "index, follow",
			viewport: "width=device-width, initial-scale=1.0"
		})
		+openGraph({
			type: "website",
			siteName: info.siteName,
			title: info.title,
			description: info.description,
			url: info.productionUrl,
			image: info.image
		})
		+webIcons({
			favicon: {
				src: "/i/favicon.ico"
			},
			appleTouchIcon: [
				{
					src: "../i/icons/apple-touch-icon.jpg"
				}, {
					src: "../i/icons/apple-touch-icon-76.jpg",
					size: "76x76"
				}, {
					src: "../i/icons/apple-touch-icon-140.jpg",	
					size: "140x140"
				}, {
					src: "../i/icons/apple-touch-icon-152.jpg",
					size: "152x152"
				}
			]
		})
		+addCSS([
			{
				media: "screen",
				href: "../css/plugins/slick.css"
			}, {
				media: "screen",
				href: "../css/sprite.css",
				noCache: true,
			}, {
				media: "screen",
				href: "../css/plugins/magnific-popup.min.css",
				noCache: true,
			}, {
				media: "screen",
				href: "../css/plugins/perfect-scrollbar.min.css",
				noCache: true,
			}, {
				media: "screen",
				href: "../css/" + info.code + ".css",
				noCache: true
			}
		])

	body(itemscope, itemtype="http://schema.org/WebPage", class="#{page.bodyClass ? page.bodyClass : ''}")

		div(class="page")
			header(class="page-header", itemscope, itemtype="http://schema.org/WPHeader")
				div(class="page-inner page-inner--max")
					div(class="header-logo-container")
						a(href="home.html", class="header-logo-white")
							img(src="", class="header-logo-img")
					div(class="header-menu-register")
						+menu({
							rootClass: "header-menu",
							items: [
								{
									name: "search",
									href: "#",
									current: (page.code == "#" ? true : false)
								}, {
									name: "my deals",
									href: "#",
									current: (page.code == "#" ? true : false)
								}, {
									name: "help",
									href: "#",
									current: (page.code == "#" ? true : false)
								}
							]
						})
					div(class="header-personal")
						a(href="#", class="header-personal-alerts")
							span(class="header-personal-count") 566
						a(href="#", class="header-personal-mail")
							span(class="header-personal-count") 566
						button(type="submit", class="btn btn--green subscribe-form-submit header-personal-btn") Share deal
						a(href="#profile", class="header-personal-avatar popup")
						a(href="#profile", class="header-personal-initials popup") J. S.
					
			main(class="page-content-register")
				block content
				
			div(id="profile", class="popup-container popup-profile white-popup mfp-hide")
				div(class="popup-profile-holder")
					img(src="../i/profile.jpg", class="popup-profile-holder-img")
				div(class="popup-profile-personal")
					div(class="popup-profile-name") Jon Smit
					div(class="popup-profile-link") Profile
					div(class="popup-profile-events")
						a(href="#", class="popup-profile-events-alerts")
							span(class="popup-profile-events-count") 566
						a(href="#", class="popup-profile-events-mail")
							span(class="popup-profile-events-count") 566
				button(type="submit", class="btn btn--green-inverse popup-profile-btn") Sign out

                
		+addJS([
			{
				src: "../js/jquery-3.2.1.min.js"
			}, {
				src: "../js/plugins/jcf.js"
			}, {
				src: "../js/plugins/jcf.select.js"
			}, {
				src: "../js/plugins/jcf.checkbox.js"
			}, {
				src: "../js/plugins/jcf.radio.js"
			}, { 
				src: "../js/plugins/jquery.validate.min.js"
			}, { 
				src: "../js/plugins/slick.min.js"
			}, { 
				src: "../js/plugins/perfect-scrollbar.jquery.min.js"
			}, { 
				src: "../js/plugins/jquery.magnific-popup.min.js"
			}, { 
				src: "../js/plugins/geometryangle.min.js"
			}, {
				src: "../js/" + info.code + ".js"
			}
		])
