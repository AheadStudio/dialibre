html(lang="ru", class="no-js", prefix="og:http://ogp.me/ns#")
	<!--<![endif]-->
	head
		+headerMeta({
			charset: "utf-8",
			keywords: info.keywords,
			description: info.description, 
			title: info.title,
			robots: "index, follow",
			viewport: "width=device-width, initial-scale=1.0"
		})
		+openGraph({
			type: "website",
			siteName: info.siteName,
			title: info.title,
			description: info.description,
			url: info.productionUrl,
			image: info.image
		})
		+webIcons({
			favicon: {
				src: "/i/favicon.ico"
			},
			appleTouchIcon: [
				{
					src: "../i/icons/apple-touch-icon.jpg"
				}, {
					src: "../i/icons/apple-touch-icon-76.jpg",
					size: "76x76"
				}, {
					src: "../i/icons/apple-touch-icon-140.jpg",	
					size: "140x140"
				}, {
					src: "../i/icons/apple-touch-icon-152.jpg",
					size: "152x152"
				}
			]
		})
		+addCSS([
			{
				media: "screen",
				href: "../css/plugins/slick.css"
			}, {
				media: "screen",
				href: "../css/sprite.css",
				noCache: true,
			}, {
				media: "screen",
				href: "../css/" + info.code + ".css",
				noCache: true
			}
		])

	body(itemscope, itemtype="http://schema.org/WebPage", class="#{page.bodyClass ? page.bodyClass : ''}")

		div(class="page")
			header(class="page-header", itemscope, itemtype="http://schema.org/WPHeader")
				div(class="page-inner page-inner--max")
					div(class="header-logo-container")
						a(href="home.html", class="header-logo-white")
							img(src="", class="header-logo-img")
                    +menu({
    					rootClass: "header-menu-register",
    					items: [
    						{
    							name: "О горизонте",
    							linkClass: "link link--white",
    							href: "#",
    						}, {
    							name: "Магазины",
    							href: "shops.html",
    							linkClass: "link link--white link--red-bottom icon-shop",
    						}, {
    							name: "Развлечения",
    							href: "entertainment.html",
    							linkClass: "link link--white link--red-bottom",
    						}, {
    							name: "Сервис",
    							href: "service.html",
    							linkClass: "link link--white link--red-bottom",
    						}, {
    							name: "Схема комплекса",
    							href: "scheme.html",
    							linkClass: "link link--white link--red-bottom",
    						}, {
    							name: "Акции",
    							href: "shares.html",
    							linkClass: "link link--white link--red-bottom",
    						}, {
    							name: "Журнал",
    							href: "journal.html",
    							linkClass: "link link--white link--red-bottom",
    						}
    					]
    				})

			main(class="page-content")
				block content
                
                
		+addJS([
			{
				src: "../js/jquery-3.2.1.min.js"
			}, {
				src: "../js/plugins/jcf.js"
			}, {
				src: "../js/plugins/jcf.select.js"
			}, {
				src: "../js/plugins/jcf.checkbox.js"
			}, {
				src: "../js/plugins/jquery.validate.min.js"
			}, { 
				src: "../js/plugins/slick.min.js"
			}, { 
				src: "../js/plugins/geometryangle.min.js"
			}, {
				src: "../js/" + info.code + ".js"
			}
		])
