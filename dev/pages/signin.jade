extends ../templates/base

block content
	div(id="dealibre-app")
		router-view()
block scripts
	script.
		new Vue({
			created: function() {
				DealibreApp.methods.checkAuthorized(function(isAuth) {
					if (!isAuth) {
						DealibreApp.methods.setHeader("signin-user", "header-mobile--white", "black");
					} else {
						DealibreApp.methods.setHeader("faq", "header-mobile--aut", "black");
						document.location.href = "dashboard.html";
					}
				});
				DealibreApp.methods.showFooter();
			}
		});
