	// Templates
	script(type="text/x-template", id="reviews-list")
		div(class="reviews")
			div(class="page-inner page-inner--w2")
				div(class="reviews-items")
					div(class="review-item", v-for="item in list")
						div(class="review-item-text") {{ item.text }}
						div(class="review-item-author") {{ item.name }}


// Scripts
block scripts
	script.
		Vue.component("reviewslist", {
			template: "#reviews-list",
			data: function() {
				return {
					list: []
				}
			},
			created: function() {
				this.load();
			},
			updated: function() {
				DEALIBRE.content.sliders.reviews();
			},
			methods: {
				load: function() {
					var self = this;
					axios.get("/api/reviews").then(function(r) {
						for(var key in r.data.data) {
							self.list.push(r.data.data[key]);
						}
					});
				}
			}
		});

		new Vue({
			el: "#reviews",
			data: {
			},
			created: function() {
				DealibreApp.methods.setHeader("home", "", "black");
			}
		});
