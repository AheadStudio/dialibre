					div(class="geo-item animation-block", data-animation="true")
						select(class="geo-item-select", placeholder="Asia", data-map="map-asia")
							option(value="1") Tunis
							option(value="2") Algir

					div(class="geo-item animation-block", data-animation="true")
						select(class="geo-item-select", placeholder="Australia / Oceania", data-map="map-australia")
							option(value="1") Tunis
							option(value="2") Algir

					div(class="geo-item animation-block", data-animation="true")
						select(class="geo-item-select", placeholder="Europe", data-map="map-asia")
							option(value="1") Tunis
							option(value="2") Algir

					div(class="geo-item animation-block", data-animation="true")
						select(class="geo-item-select", placeholder="North America", data-map="map-north-america")
