extends ../templates/base

block content
	div(id="dealibre-app")
		router-view()

block scripts
	script.
		new Vue({
			created: function() {
			 	DealibreApp.methods.checkAuthorized(function(isAuth) {
					if (!isAuth) {
						DealibreApp.methods.setHeader("home", "", "black");
					} else {
						DealibreApp.methods.setHeader("home", "header-mobile--aut", "black");
						var $body = $("body");
						if ($body.hasClass("page-home")) {
							$body.removeClass("page-home");
							$(".page-content", $body).addClass("page-content--auth");
						}
					}
				});
				DealibreApp.methods.showFooter();
			}
		});
