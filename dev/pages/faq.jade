extends ../templates/base

block content
	// HTML
	div(class="page-heading")
		div(class="page-inner page-inner--w1")
			h1(class="h1") Faq

	div(id="faq", class="faq", v-bind:class="{ loading:!list.length }")
		div(class="page-inner page-inner--w2")
			div(class="faq-items")
				faqitem(v-for="item in list", v-bind:faq="item", v-bind:key="item.id")

	
	// Templates
	script(id="faq-item", type="text/x-template")
		div(class="faq-item")
			div(class="faq-item-title") {{ faq.id }}. {{ faq.question }}
			div(class="faq-item-text") {{ faq.answer }}

block scripts
	script.
		Vue.component("faqitem", {
			props: ["faq"],
			template: "#faq-item"
		});
		new Vue({
			el: "#faq",
			data: {
				list: []
			},
			created: function() {
				this.load();
				DealibreApp.methods.typeMobileMenu("light-noaut", false);
			},
			methods: {
				load: function() {
					var self = this;
					axios.get("/api/faq").then(function(answer) {
						for(var key in answer.data.data) {
							self.list.push(answer.data.data[key]);
						}
					});
				}
			}
		});
