// Menu burger
.menu-burger
	position absolute
	left 0
	top 14px
	z-index 1000

	display block
	width 30px
	height 25px

	cursor pointer

	.menu-burger-inner
		position absolute
		left 0
		top 50%
		margin-top -2px

		width 100%
		height 4px

		border-radius 4px
		background-color red

		transition opacity 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
	&:after
		content ""

		position absolute
		left 0

		display block
		width 100%
		height 4px

		border-radius 4px
		background-color red

		transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
		top 0

	&:after
		bottom 0

	&.active
		.menu-burger-inner
			opacity 0

		&:before
			transform rotate(-45deg) translateY(10px) translateX(-5px)

		&:after
			transform rotate(45deg) translateY(-10px) translateX(-5px)

.menu-overlay
	position fixed
	z-index 10
	left 0
	top 0
	right 0
	bottom 0

	display none

.show-menu
	.menu-overlay
		display block
// //Menu burger



// Scroll
.mobile-scroll-holder
	overflow-x scroll
	overflow-y hidden

	.mobile-scroll
		white-space nowrap

	&::-webkit-scrollbar
		display none
// //Scroll



// Adaptive table
.adaptive-table
	display block

	thead
	tbody
	tfoot
	tr
	th
	td
		display block

	thead
		tr
			position absolute
			left -9999px
			top -9999px

	td
		position relative

		padding-left 50%

		&:before
			content attr(data-header)

			position absolute
			left 6px
			top 6px

			width 45%
			padding-right 5%

			white-space nowrap
// //Adaptive table



// Panels
.panel-title
	cursor pointer

.panel-content
	display none

	&.active
		display block
// //Panels



// Aside
.page
	overflow hidden

.page-content
	transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

body.show-menu
	.header-menu
		transform translateX(0)

	.page-content
		transform translateX(200px)
// //


/*** Main Page ***/

/** mobile menu **/
.header-mobile
	display none
	width 100%
	height auto

	padding 35px 25px 35px 25px
	box-sizing border-box

	background rgba(61, 85, 106, 0.85)

	.header-logo-container
		background none
		height auto

		.header-logo-white
			margin 0
			padding 0

	.header-mobile-burger
		position relative
		display inline-block
		float right

		width 30px
		height 30px

		z-index 1000
		overflow hidden

		.header-mobile-burger-inner
			display block
			width 30px
			height 5px

			margin-top 12.5px

			background #fff

		&:before
		&:after
			content ""

			position absolute
			left 0

			display block
			width 35px
			height 5px

			background-color #fff

			transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

		&:before
			top 0

		&:after
			bottom 0

		&.active
			.header-mobile-burger-inner
				opacity 0

			&:before
				transform rotate(-45deg) translateY(7px) translateX(-10px)

			&:after
				transform rotate(45deg) translateY(-7px) translateX(-10px)


	.header-mobile-menu
		position relative
		display none
		width 100%

		margin-top 50px

		overflow hidden

		line-height 1
		opacity 0
		z-index 1000

		transform translateY(-30px)
		transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), opacity 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

		&.active
			opacity 1
			transform translateY(0)

		.header-menu
			position relative
			top auto
			left auto
			transform none

			z-index 40

			line-height 1



/** //mobile menu **/
@media screen and (max-width: 800px)
	.header-desktop
		display none

	.header-mobile
		display block




